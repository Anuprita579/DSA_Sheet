public class Solution {
    public static void nBinaryTriangle(int n) {
        for(int i=0; i<n; i++){
            if(i%2==0){
                for (int j=0; j<=i; j++){
                    System.out.print((j+1)%2 + " ");
                }
                System.out.println();
            }

            if(i%2!=0){
                for (int j=0; j<=i; j++){
                    System.out.print((j)%2 + " ");
                }
                System.out.println();
            }
        }
    }
}