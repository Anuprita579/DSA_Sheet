public class Solution {
    public static void alphaHill(int n) {
        for (int i=0; i<n; i++){
            for(int j=0; j<n-1-i; j++){
                System.out.print(" ");
            }
            for (int j=0; j<=i; j++){
                System.out.print((char)('A'+j)+ " ");
            }
            for(int j=i; j>0; j--){
                System.out.print((char)('A'+j-1)+ " ");
            }
            System.out.println();
        }
    }
}