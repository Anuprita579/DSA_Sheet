public class Solution {
    public static void numberCrown(int n) {
        int space = 2*(n-1);
        for (int i=0; i<n; i++){
            for(int j=0; j<=i; j++){
                System.out.print(j+1+ " ");
            }
            for(int j=0; j<space-(2*i); j++){
                System.out.print(" ");
            }
            for(int j=i+1; j>0; j--){
                System.out.print(j+" ");
            }
            System.out.println();
        }
    }
}